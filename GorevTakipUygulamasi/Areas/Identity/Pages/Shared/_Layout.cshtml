<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Görev Takip Sistemi</title>
    <base href="~/" />
    <link href="css/bootstrap/bootstrap.min.css" rel="stylesheet" />
    <link href="css/app.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
    
    <style>
        /* Mor tema CSS */
        .card-header.bg-primary {
            background: linear-gradient(135deg, #660066 0%, #660066 100%) !important;
            border-bottom: none;
        }

        .btn-primary {
            background: linear-gradient(135deg,#660066 0%, #660069 100%) !important;
            border-color: #8e44ad !important;
            color: white !important;
            transition: all 0.3s ease;
        }

        .btn-primary:hover {
            background: linear-gradient(135deg, #7d3c98 0%, #5b2c6f 100%) !important;
            border-color: #7d3c98 !important;
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(142, 68, 173, 0.3);
        }

        .btn-primary:focus,
        .btn-primary:active {
            background: linear-gradient(135deg, #6c3483 0%, #512e5f 100%) !important;
            border-color: #6c3483 !important;
            box-shadow: 0 0 0 0.2rem rgba(142, 68, 173, 0.5) !important;
        }

        .text-primary, a.text-primary {
            color: #8e44ad !important;
        }

        a.text-primary:hover {
            color: #6c3483 !important;
            text-decoration: none;
        }

        .form-control:focus {
            border-color: #bb8fce;
            box-shadow: 0 0 0 0.2rem rgba(142, 68, 173, 0.25);
        }

        .form-floating > .form-control:focus ~ label {
            color: #8e44ad;
        }

        .card.shadow-lg {
            box-shadow: 0 10px 30px rgba(142, 68, 173, 0.15) !important;
        }

        /* Navbar mor tema */
        .navbar[style*="background: linear-gradient(135deg, #667eea"] {
            background: linear-gradient(135deg, #8e44ad 0%, #6c3483 100%) !important;
        }
    </style>
</head>
<body class="d-flex flex-column min-vh-100">
    <nav class="navbar navbar-expand-lg" style="background: linear-gradient(135deg, #8e44ad 0%, #6c3483 100%);">
        <div class="container">
            <a class="navbar-brand text-white" href="/">
                <i class="fas fa-tasks me-2"></i>
                Görev Takip
            </a>
            <div class="navbar-nav ms-auto">
                <a class="nav-link text-white" href="/">Ana Sayfa</a>
            </div>
        </div>
    </nav>

    <main class="container my-5 flex-grow-1">
        @RenderBody()
    </main>

    <footer class="bg-dark text-light py-3 mt-auto">
        <div class="container text-center">
            <p class="mb-0">&copy; @DateTime.Now.Year Görev Takip Sistemi. Tüm hakları saklıdır.</p>
        </div>
    </footer>

    <script src="_framework/blazor.server.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>