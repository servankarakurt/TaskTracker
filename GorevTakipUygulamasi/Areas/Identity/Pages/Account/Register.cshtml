@page
@using Microsoft.AspNetCore.Authentication
@using Microsoft.AspNetCore.Identity
@using GorevTakipUygulamasi.Areas.Identity.Pages.Account
@model RegisterModel
@{
    ViewData["Title"] = "Kayıt Ol";
    Layout = "~/Areas/Identity/Pages/Shared/_Layout.cshtml"; // Mevcut layout'u kullanın"
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow-lg border-0 rounded-lg">
            <div class="card-header bg-primary text-white text-center py-4">
                <div class="mb-3">
                    <i class="fas fa-user-plus fa-3x"></i>
                </div>
                <h3 class="fw-bold mb-0">Yeni Hesap Oluştur</h3>
                <p class="mb-0 opacity-75">Hemen kayıt olun</p>
            </div>

            <div class="card-body p-4">
                <form id="registerForm" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold text-muted">
                            <i class="fas fa-envelope me-2"></i>E-posta Adresi
                        </label>
                        <input asp-for="Input.Email" class="form-control form-control-lg" placeholder="ornek@email.com" />
                        <span asp-validation-for="Input.Email" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold text-muted">
                            <i class="fas fa-lock me-2"></i>Parola
                        </label>
                        <input asp-for="Input.Password" type="password" class="form-control form-control-lg" placeholder="Parolanızı girin" />
                        <span asp-validation-for="Input.Password" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold text-muted">
                            <i class="fas fa-lock me-2"></i>Parola (Tekrar)
                        </label>
                        <input asp-for="Input.ConfirmPassword" type="password" class="form-control form-control-lg" placeholder="Parolayı tekrar girin" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                    </div>

                    <div class="d-grid mb-3">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-user-plus me-2"></i>
                            <span>Kayıt Ol</span>
                        </button>
                    </div>
                </form>

                <div class="text-center">
                    <p class="mb-0">
                        Zaten bir hesabınız var mı?
                        <a href="/Identity/Account/Login" class="text-primary text-decoration-none fw-semibold">
                            Giriş Yap
                        </a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>