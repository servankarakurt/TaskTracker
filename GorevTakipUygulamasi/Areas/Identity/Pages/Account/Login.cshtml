@page
@using Microsoft.AspNetCore.Authentication
@using Microsoft.AspNetCore.Identity
@using GorevTakipUygulamasi.Areas.Identity.Pages.Account
@model LoginModel
@{
    ViewData["Title"] = "Giriş Yap";
    Layout = "~/Areas/Identity/Pages/Shared/_Layout.cshtml";// Mevcut layout'u kullanın
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow-lg border-0 rounded-lg">
            <div class="card-header bg-primary text-white text-center py-4">
                <div class="mb-3">
                    <i class="fas fa-user-circle fa-3x"></i>
                </div>
                <h3 class="fw-bold mb-0">Hoş Geldiniz</h3>
                <p class="mb-0 opacity-75">Hesabınıza giriş yapın</p>
            </div>

            <div class="card-body p-4">
                <form id="account" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="E-posta" />
                        <label asp-for="Input.Email">E-posta</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Parola" />
                        <label asp-for="Input.Password">Parola</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="form-check mb-3">
                        <input asp-for="Input.RememberMe" class="form-check-input" />
                        <label asp-for="Input.RememberMe" class="form-check-label">Beni hatırla</label>
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <button id="login-submit" type="submit" class="btn btn-primary btn-lg">Giriş Yap</button>
                    </div>
                </form>

                <div class="mt-3 text-center">
                    <a href="/Identity/Account/Register">Kayıt ol</a> |
                    <a href="/Identity/Account/ForgotPassword">Parolamı unuttum</a>
                </div>
            </div>
        </div>
    </div>
</div>