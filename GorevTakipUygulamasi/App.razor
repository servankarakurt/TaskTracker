@using GorevTakipUygulamasi.Pages
<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(App).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <NotAuthorized>
                    @if (context.User.Identity?.IsAuthenticated != true)
                    {
                        <RedirecToLogin />
                    }
                    else
                    {
                        <p role="alert">Bu sayfaya erişim yetkiniz yok.</p>
                    }
                </NotAuthorized>
            </AuthorizeRouteView>
            <FocusOnNavigate RouteData="@routeData" Selector="h1" />
        </Found>
        <NotFound>
            <PageTitle>Bulunamadı</PageTitle>
            <LayoutView Layout="@typeof(MainLayout)">
                <div class="container mt-5">
                    <div class="row justify-content-center">
                        <div class="col-md-6 text-center">
                            <div class="card">
                                <div class="card-body">
                                    <h1 class="display-1 text-muted">404</h1>
                                    <h4 class="text-danger">Sayfa Bulunamadı</h4>
                                    <p class="text-muted">Aradığınız sayfa mevcut değil veya taşınmış olabilir.</p>
                                    <a href="/" class="btn btn-primary">
                                        <i class="fas fa-home me-2"></i>Ana Sayfaya Dön
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>